{
  "name": "tinkr-lua-api",
  "displayName": "Tinkr Lua API",
  "description": "Tinkr Lua API",
  "version": "1.2.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Programming Languages", "Linters"
  ],
  "publisher": "AmsTaFFix",
  "repository": {
    "type": "git",
    "url": "https://github.com/WoW-U/vscode-tinkr-api/tree/main"
  },
  "activationEvents": [
    "onLanguage:lua"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "extensionDependencies": [
    "sumneko.lua",
    "ketho.wow-api"
  ],
  "contributes": {
    "commands": [
      {
        "command": "tinkrAPI.activateExtension",
        "title": "Activate Tinkr API extension"
      }
    ],
    "configuration": {
      "title": "Tinkr API",
      "properties": {
        "tinkrAPI.luals.configurationScope": {
          "type": "string",
          "default": "Workspace",
          "markdownDescription": "The configuration scope for automatically configured LuaLS settings",
          "enum": [
            "User",
            "Workspace"
          ],
          "enumDescriptions": [
            "Settings that apply globally to any instance of VS Code you open.",
            "Settings stored inside your workspace and only apply when the workspace is opened."
          ]
        }
      }
    }
  }
}